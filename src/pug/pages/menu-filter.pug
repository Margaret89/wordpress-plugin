								{img:'broccoli.svg', title:'Vegeterian'},
								{img:'avocado.svg', title:'Lorem'},
							]

						.cat-filter
							each item in list
								.cat-filter__item
									.cat-filter__icon
										img(src="/assets/img/"+item.img, alt="")
									.cat-filter__text= item.title



						.filter__label Filters

						.filter__list
							-
								var filters=[
									{title:'Popular'},
									{title:'Takeaway'},
									{title:'Nearby'},
									{title:'Future order', status:'checked'},
									{title:'Respect VIP points'},
									{title:'Kosher'},
									{title:'Delivery', status:'checked'},
									{title:'Expresss'},
								]

							each item, index in filters
								.filter__item
									.input-check
										if(item.status=='checked')
											input(type='checkbox', id='filter'+index, checked='checked')
										else
											input(type='checkbox', id='filter'+index)
										label.input-check__label(for='filter'+index)
											span.input-check__mark
												+svg('ic-check','ic-check', '16', '12')
											span.input-check__text= item.title

							
						.filter__bottom
							.filter__bottom-item
								a(href="#").filter__clear clear all

							.filter__bottom-item
								a(href="#").filter__cancel Cancel
								a(href="#").filter__apply Apply

