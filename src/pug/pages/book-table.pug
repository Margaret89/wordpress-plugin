extends ../layout/main

block variables
	- var title = 'Branch profile';
	- var shadow_site='true';
	- var body_scroll='false'

block modal
	.notice-layout
		.notice.notice_red
			| Sorry, no available tables! Try another date or time
			.notice__close
				+svg('ic-close-circle','ic-close-circle', '20', '20')

	.popup-wrap
		.popup
			.popup__close
				+svg('ic-grad-close','ic-grad-close', '32', '32')

			.popup__top
				.popup__head
					.h2 Book a table
			.popup__content
				.form-book-table
					form.form-site-wrap
						.form-site
							.form-site__content
								.form-site__field
									.form-site__label Name
									.form-site__input
										input(type='text', placeholder='How can we call you?')

								.form-site__field
									.form-site__label Phone
									.form-site__input
										input(type='tel', placeholder='(972)')

								.form-site__field
									.form-site__label Areas
									.form-site__input
										select
											option(value="", disabled, selected, hidden) Outside
											option(value="Param1") Parametr 1
											option(value="Param2") Parametr 2
											option(value="Param3") Parametr 3
											option(value="Param4") Parametr 4
											option(value="Param5") Parametr 5

								.form-site__field-wrap
									.form-site__field
										.form-site__label Date
										.form-site__input
											.input-date
												input(type='date', value='2020-04-10')

									.form-site__field
										.form-site__label Time
										.form-site__input
											.input-time
												input(type='text', value='17:00 - 20:00')

								.form-site__field
									.form-site__count
										.form-site__label Diners

										.counter
											.counter__min
												+svg('ic-minus','ic-minus', '18', '4')

											input.counter__input(type='text', value='2')

											.counter__max
												+svg('ic-plus','ic-plus', '18', '18')

								.form-site__field
									.form-site__label Notes
									.form-site__input
										textarea(placeholder="Some special wishes?")

						.form-site__btn
							button.btn(type='submit')
								span Book
							
							.form-site__link-wrap
								a(href="#").form-site__link
									+svg('ic-confetti','ic-confetti', '16', '16')
									|Special event


block content
	include ../components/detail-office