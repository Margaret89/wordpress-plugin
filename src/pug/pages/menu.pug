block content
	section.top-menu-wrap
		.container
			.top-menu-wrap__content
				-
					var list=[
						{title:'Menu', status:'active'},
						{title:'Menu2'},
						{title:'Menu 3'},
						{title:'Menu 4'},
						{title:'Menu 5'},
						{title:'Menu 6'},
						{title:'Menu 7'},
					]

				.top-menu
					each item in list
						a.top-menu__item(href="#", class=item.status=='active'?'active':'')= item.title

				.top-action
					.top-action__btn
						.search.search_grey.d-md-none
							.search__btn
								+svg('ic-search','ic-search ic-stroke', '20', '20')

						.filter
							.filter__btn
								+svg('ic-filter','ic-filter', '22', '22')
								+svg('ic-cancel','ic-cancel', '16', '16')

							.filter__popup
								.filter__close
									+svg('ic-close-thin','ic-close-thin', '16', '16')

								-
									var list=[
										{img:'avocado.svg', title:'Vegan'},
										{img:'gluten.svg', title:'More'},
										{img:'broccoli.svg', title:'Vegeterian'},
										{img:'avocado.svg', title:'Vegan'},
