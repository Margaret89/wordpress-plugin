extends ../layout/main

block variables
	- var title = 'Branch profile';

block content
	section.gallery
		a.gallery__back(href="#")
			+svg('ic-arrow-left','ic-arrow-left ic-white', '16', '12')
			| Back

		.gallery-list
			.gallery-list__item.gallery-list__item_big
				img(src="/assets/img/gallery1.jpg", alt="")
			
			.gallery-list__item
				img(src="/assets/img/gallery2.jpg", alt="")

			.gallery-list__group
				.gallery-list__item
					img(src="/assets/img/gallery3.jpg", alt="")

				.gallery-list__item
					img(src="/assets/img/gallery4.jpg", alt="")

			.gallery-list__item.gallery-list__item_small
				img(src="/assets/img/gallery2.jpg", alt="")

		.gallery__more
			a.btn.btn_opacity All photos (12)
	
	section.detail-office
		.container
			.detail-office__top
				.detail-office__info
					.detail-office__head
						.detail-office__main
							.detail-office__logo(style="background-image: url(/assets/img/mac.jpg)")
							.detail-office__title McDonalds

						.detail-office__price $$60-120

					.service-info
						-
							var list=[
								{icon:'ic-clock', title:'Working hours'},
								{icon:'ic-direction', title:'Delivery areas'},
								{icon:'ic-table', title:'Book a table'},
								{icon:'ic-gift', title:'Gift card'},
							]
						
						each item in list
							a(href="#").service-info__item
								span.service-info__icon
									+svg(item.icon,item.icon, '20', '20')
								span.service-info__text= item.title

					.detail-office__desc Mediterranean, International, Vegan, Free gluten

					.rating-card
						.rating-card__top
							.rating-card__head-wrap
								.rating-card__title Rating
								.rating-card__desc Based on 485 reviews from last 12 months

							.mark.mark_orange
								.mark__text 3,7

						.rating-card__content
							-
								var list=[
									{title:'Tasty', mark:'4,3', percent:'86'},
									{title:'Delivery speed', mark:'3,6', color:'orange', percent:'72'},
									{title:'Service', mark:'3', color:'orange', percent:'60'},
									{title:'Price/quality', mark:'', color:'4,6', percent:'92'},
								]

							each item in list
								.progress(class=item.color=='orange'?'progress_orange':'')
									.progress__info
										.progress__title= item.title
										.progress__mark= item.mark

									.progress__field
										.progress__line(style="width:"+item.percent+"%")

						.rating-card__bottom
							span.rating-card__more Social networks rating
								+svg('ic-arrow-down','ic-arrow-down', '12', '8')


				.detail-office__location
					.detail-office__icons
						.icon-group
							-
								var list=[
									{icon:'ic-accessibility-wc'},
									{icon:'ic-deaf'},
									{icon:'ic-accessibility'},
									{icon:'ic-park', color:'grey'}
								]

							each item in list
								.icon-group__item(style=item.color=='grey'?'icon-group__item_grey':'')
									+svg('ic-park','ic-park', '25', '24')

						.coins-panel
							.coins-panel__content
								.coins-panel__icon
									+svg('ic-euro','ic-euro', '40', '40')
								.coins-panel__text Geteat coins for next order

							.coins-panel__percent 15%

						.contact-card
							.contact-card__head Contacts

							.contact-card__list
								.contact-card__item
									.contact-card__title Address

									.contact-card__val
										+svg('ic-address','ic-address', '12', '16')
										|Fishman 19, Tel Aviv

								.contact-card__item
									.contact-card__title Phone

									.contact-card__val
										a(href="#")
											+svg('ic-phone','ic-phone', '16', '16')
											|Show number

								.contact-card__item
									.contact-card__title Social media

									.contact-card__val
										.social
											a(href="#").social__item
												+svg('ic-instagram','ic-instagram', '16', '16')

											a(href="#").social__item
												+svg('ic-facebook','ic-facebook', '16', '16')

											a(href="#").social__item
												+svg('ic-tripadvisor','ic-tripadvisor', '16', '16')

							.contact-card__map(style="background-image: url(/assets/img/map.jpg)")

			.detail-office__bottom
				.advant
					-
						var list=[
							{img:'delivery.svg', title:'Delivery'},
							{img:'takeaway.svg', title:'Takeaway', text:'Preparation time - 30 min'},
							{img:'future.svg', title:'Future order'},
							{img:'confetti.svg', title:'Special events'},
							{img:'table.svg', title:'Sitting'},
							{img:'kosher.svg', title:'Kosher'},
						]

					each item in list
						.advant__item
							.advant__img
								img(src="/assets/img/"+item.img, alt="")
							.advant__title= item.title
							
							if(item.text)
								.advant__text= item.text

	section.review-wrap
