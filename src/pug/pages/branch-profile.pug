					]

				each item in list
					.review-item
						.review-item__main
							.review-item__author
								.review-item__img(style="background-image: url(/assets/img/"+item.img+")")
								.review-item__author= item.name

							.review-item__content
								.review-item__info
									.review-item__title= item.title
									.review-item__text= item.text

								.review-item__bottom
									.review-item__date= item.date
									+svg(item.like,item.like, '20', '20')

						.review-rating
							if(ratimg_img)
								.review-rating__top
									.review-rating__title Rating

									.mark(class=item.rating_color=='red'?'mark_red':'')
										.mark__text= item.rating

								.review-gallery
									if(ratimg_img=='5')
										-
											var gallery=[
												{img:'review1.jpg'},
												{img:'review2.jpg'},
												{img:'review1.jpg'},
												{img:'review2.jpg'},
												{img:'review2.jpg', count:'+2'},
											]
									else
										-
											var gallery=[
												{img:'review1.jpg'},
												{img:'review2.jpg'},
												{img:'review1.jpg'},
											]
									each gal in gallery
										.review-gallery__item(style="background-image: url(/assets/img/"+gal.img+")")
											.review-gallery__count= gal.count

							if(ratimg_progress)
